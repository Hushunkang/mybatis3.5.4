<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
namespace：命名空间，指定dao层Mapper接口的全类名
id：唯一标识一个查询/更新sql
resultType：查询的结果映射到哪个类
#{id}：从传递过来的参数中取出id值
-->
<mapper namespace="com.atguigu.mybatis.dao.EmployeeMapperPlus">

    <!-- resultMap表示自定义Java类与数据库表映射规则 -->
    <resultMap id="myEmp" type="com.atguigu.mybatis.bean.Employee">
        <id property="id" column="id"></id>
        <id property="lastName" column="last_name"></id>
        <id property="gender" column="gender"></id>
        <id property="email" column="email"></id>
    </resultMap>

<!--    <select id="getEmpById" resultType="emp">-->
<!--        select * from tbl_employee where id=#{id}-->
<!--    </select>-->

    <select id="getEmpById" resultMap="myEmp">
        select * from tbl_employee where id=#{id}
    </select>

</mapper>